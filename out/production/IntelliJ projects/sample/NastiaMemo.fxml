<VBox prefHeight="476.0" prefWidth="714.0" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1">
  <children>
      <AmbientLight color="CHARTREUSE" lightOn="true" />
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <Pane prefHeight="200.0" prefWidth="200.0">
         <children>
            <TextField fx:id="filePath" layoutX="53.0" layoutY="31.0" prefHeight="25.0" prefWidth="365.0" />
            <Button fx:id="fileChooser" layoutX="450.0" layoutY="31.0" mnemonicParsing="false" onAction="#onOpenChooser" prefHeight="25.0" prefWidth="107.0" style="-fx-background-color: gold; -fx-border-color: black;" text="Choose file..." />
            <Label layoutX="53.0" layoutY="10.0" text="Path to text file:" />
         </children></Pane>
      <TabPane prefHeight="486.0" prefWidth="640.0" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Words Database">
               <content>
                  <SplitPane dividerPositions="0.35" prefHeight="307.0" prefWidth="288.0">
                     <items>
                        <AnchorPane prefHeight="307.0" prefWidth="217.0">
                           <children>
                              <TableView fx:id="table" prefHeight="337.0" prefWidth="248.0">
                                <columns>
                                  <TableColumn fx:id="wordColumn" prefWidth="125.0" text="Word" />
                                  <TableColumn fx:id="translationColumn" prefWidth="122.0" text="Translation" />
                                </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                        <AnchorPane fx:id="anchorPane" prefHeight="307.0" prefWidth="446.0">
                           <children>
                              <Region fx:id="addAndDeleteRegion" blendMode="COLOR_BURN" layoutX="11.0" layoutY="10.0" opacity="0.51" prefHeight="167.0" prefWidth="428.0" style="-fx-background-color: seagreen;">
                                 <effect>
                                    <Blend />
                                 </effect></Region>
                              <Button fx:id="deleteWordBtn" layoutX="194.0" layoutY="108.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="110.0" style="-fx-background-color: #ff4855; -fx-border-color: black;" text="Delete Word" />
                              <Button fx:id="addWordBtn" layoutX="194.0" layoutY="56.0" mnemonicParsing="false" onAction="#onAddWordBtnClicked" prefHeight="34.0" prefWidth="110.0" style="-fx-background-color: limegreen; -fx-border-color: black;" text="Add Word" />
                              <TextField fx:id="wordField" layoutX="24.0" layoutY="56.0" prefHeight="25.0" prefWidth="142.0" />
                              <TextField fx:id="translationField" layoutX="24.0" layoutY="116.0" prefHeight="25.0" prefWidth="142.0" />
                              <Label layoutX="24.0" layoutY="34.0" text="English word:" />
                              <Label layoutX="24.0" layoutY="96.0" text="Translation:" />
                              <ToggleSwitch fx:id="toggle" layoutX="196.0" layoutY="22.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="107.0" style="-fx-base: limegreen;" text="ToggleButton" turnOffText="Off" turnOnText="On">
                              </ToggleSwitch>
                           </children>
                        </AnchorPane>
                     </items></SplitPane>
               </content>
            </Tab>
            <Tab text="Learning" />
         </tabs>
      </TabPane>
  </children>
